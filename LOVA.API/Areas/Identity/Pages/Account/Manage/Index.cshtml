@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"] </h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Username">Användarnamn</label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label>Brunn</label>
                        <input asp-for="Input.WellName" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Property">Fastighetsbeteckning</label>
                        <input asp-for="Input.Property" class="form-control" disabled />
                        <span asp-validation-for="Input.Property" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Avlopps slinga</label>
                        <input asp-for="Input.WellName[0]" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.ForeName">Förnamn</label>
                        <input asp-for="Input.ForeName" class="form-control" />
                        <span asp-validation-for="Input.ForeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName">Efternamn</label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Epost</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber">Telefon</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.ForeName2">Förnamn 2</label>
                        <input asp-for="Input.ForeName2" class="form-control" />
                        <span asp-validation-for="Input.ForeName2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName2">Efternamn 2</label>
                        <input asp-for="Input.LastName2" class="form-control" />
                        <span asp-validation-for="Input.LastName2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email2">Epost 2</label>
                        <input asp-for="Input.Email2" class="form-control" />
                        <span asp-validation-for="Input.Email2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Phone2">Telefon 2</label>
                        <input asp-for="Input.Phone2" class="form-control" />
                        <span asp-validation-for="Input.Phone2" class="text-danger"></span>
                    </div>
                </div>

            </div>







            <button id="update-profile-button" type="submit" class="btn btn-primary mt-5">Spara</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}