@page
@model LOVA.API.Pages.Administration.Role.CreateRoleModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create new Role</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateRoleViewModel.RoleName"></label>
                <input asp-for="CreateRoleViewModel.RoleName" class="form-control" />
                <span asp-validation-for="CreateRoleViewModel.RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Spara</button>

        </form>
    </div>
</div>

