@page
@model LOVA.API.Pages.Administration.Mail.ListModel
@{
}

<div class="container mt-5">
    <div class="row my-5">
        <h4>Ändra din mailprenumeration.</h4>
    </div>
   <div class="row my-5">
        <form method="post">
        <ul>
            @for(var i = 0; i < Model.MailSubscriptions.Count; i++)
            {
                <input type="hidden" asp-for="@Model.MailSubscriptions[i].Email" />
                <input type="hidden" asp-for="@Model.MailSubscriptions[i].MailType" />
                <input type="hidden" asp-for="@Model.MailSubscriptions[i].MailSubscriptionId" />
                <input type="hidden" asp-for="@Model.MailSubscriptions[i].MailTypeId" />
                if (Model.MailSubscriptions[i].IsScription)
                {
                     <li>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"  asp-for="@Model.MailSubscriptions[i].IsScription" checked>
                        <label class="form-check-label" for="flexSwitchCheckDefault">@Model.MailSubscriptions[i].Description</label>
                    </div>
                    
                </li>
                }
                else
                {
                     <li>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for="@Model.MailSubscriptions[i].IsScription" >
                        <label class="form-check-label" for="flexSwitchCheckDefault">@Model.MailSubscriptions[i].Description</label>
                    </div>
                    
                </li>
                }

            }
        </ul>
        <input type="submit" value="Uppdatera" class="btn btn-outline-secondary">
        </form>
    </div>
</div>

