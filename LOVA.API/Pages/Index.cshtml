    ViewData["Title"] = "Index";
}

<style type="text/css">
    .w-100 {
        width: 820px !important;
        height: 360px;
    }
</style>


<div class="row">
    <div class="mx-auto">
        <img src="~/Images/lottingelundloga.jpg" alt="...">
    </div>
</div>

<div class="row">
        <div class="col-6 offset-2">
        <div class="row">
            <div class="mx-auto">
                <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-interval="2000">
                            <img src="~/Images/022.jpg" class="d-block w-100" alt="..." style="width:820px;height:360px">
                        </div>
                        <div class="carousel-item" data-interval="2000">
                            <img src="~/Images/stad415.jpg" class="d-block w-100" alt="..." style="width:820px;height:360px">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/stad615.jpg" class="d-block w-100" alt="..." style="width:820px;height:360px">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
