@page
@model LOVA.API.Pages.Lova.Activity.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="Container" style="height:80vh;">
    <div class="row">
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <h2 class="display-5 fw-bold text-center">Action</h2>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LovaIssue.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LovaIssue.Action)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.Action)
                </dd>
                <dt class="col-sm-2">
                   Åtgärd
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.Response)
                </dd>
                <dt class="col-sm-2">
                    Ägare
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.OwnedBy)
                </dd>
                <dt class="col-sm-2">
                    Skapat
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.CreatedAt)
                </dd>
                <dt class="col-sm-2">
                    Uppdaterat
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LovaIssue.UpdatedAt)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <a asp-page="./Edit" asp-route-id="@Model.LovaIssue.Id" class="text-center">Uppdatera</a> |
        <a asp-page="./Index" class="text-center">Tillbaka till listan</a>
    </div>

</div>




