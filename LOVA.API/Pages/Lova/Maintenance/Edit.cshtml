@page
@model LOVA.API.Pages.Lova.Maintenance.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">

<div class="row">
    <h3>Uppdatera - @Model.LatestMaintenance.Maintenance.Name</h3>
</div>

<div class="row mt-5">
    <div class="col-md-4 mt-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LatestMaintenance.Id" />
            <input type="hidden" asp-for="LatestMaintenance.MaintenanceId" />
            <div class="form-group">
                <label asp-for="LatestMaintenance.LastMaintenance" class="control-label"></label>
                <input asp-for="LatestMaintenance.LastMaintenance" class="form-control" />
                <span asp-validation-for="LatestMaintenance.LastMaintenance" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row mt-5">
    <a asp-page="./ListMaintenanceActivities">Tillbaka</a>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
