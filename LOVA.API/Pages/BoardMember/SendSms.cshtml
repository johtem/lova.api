@page
@model LOVA.API.Pages.BoardMember.SendSmsModel
@{

}

<div class="container mt-5">
    <div class="row mt-5">
        <h4>Skicka SMS</h4>
    </div>
    <div class="row mt-5">
        <div class="col-md-4">
            <h4>Sändlista</h4>
            <p>@Model.Users.First().FullName</p>
        </div>
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Message.To" class="control-label">Till (enbart svenska nummber)</label>
                    <input asp-for="Message.To" class="form-control" />
                    <span asp-validation-for="Message.To" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message.Message" class="control-label">Meddelande</label>
                    <input asp-for="Message.Message" class="form-control" />
                    <span asp-validation-for="Message.Message" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Skicka" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
