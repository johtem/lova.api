@page
@model LOVA.API.Pages.User.ProfileDeleteModel
@{
}
<div class="container mt-5" style="height:80vh;">
    <div class="row">
        <h4>Ta bort från hushållet</h4>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th>Namn</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Contact.FirstName @Model.Contact.LastName</td>
                        </tr>
                    </tbody>



                </table>
