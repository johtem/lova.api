@using Microsoft.AspNetCore.Identity
@using LOVA.API.Models 

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--  Fonts -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />




    <!-- Add the Kendo Bootstrap v4 theme: -->
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.1.119/styles/kendo.bootstrap-v4.min.css" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.custom.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <!-- UI Script files -->
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/jquery.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/kendo.all.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/kendo.aspnetmvc.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/holder/holder.min.js"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/cultures/kendo.culture.sv-SE.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/messages/kendo.messages.sv-SE.min.js"></script>

    <!-- Font -->
    <script src="https://kit.fontawesome.com/ac1c9834c3.js" crossorigin="anonymous"></script>

</head>



<body>
    <header>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
        {
            <partial name="Menu/_menuUser" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Lova"))
        {
            <partial name="Menu/_menuLova" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Styrelse"))
        {
            <partial name="Menu/_menuStyrelse" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <partial name="Menu/_menuAdmin" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("VA"))
        {
            <partial name="Menu/_menuVA" />
        }
        else
        {
            <partial name="Menu/_menu" />
        }

    </header>

    <script type="text/javascript">
        //set culture of the Kendo UI
        kendo.culture("sv-SE");
    </script>

    @{
        CultureInfo.DefaultThreadCurrentCulture = new CultureInfo("sv-SE");
    }

<div class="container-fluid" style="padding-right: 0px; padding-left: 0px; margin-top: 100px;">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <i class="far fa-copyright"></i> 2020 - Löttingelund - <a href="mailto:info@lottingelund.se">info@lottingelund.se</a> - <a href="https://www.facebook.com/L%C3%B6ttingelund-346423732213175" target="_blank"><span style="font-size: 24px; color: Dodgerblue; vertical-align: middle" class="mb-1"><i class="fab fa-facebook-square"></i></span></a>
        </div>
    </footer>



    @RenderSection("Scripts", required: false)
</body>
</html>
