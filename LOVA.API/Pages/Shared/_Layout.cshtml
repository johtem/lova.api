@using Microsoft.AspNetCore.Identity
@using LOVA.API.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Löttingelund</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Add the Kendo Bootstrap v4 theme: -->
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.1.119/styles/kendo.bootstrap-v4.min.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

    <!-- Vendor CSS Files -->
    <!--   <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/lib/icofont/icofont.min.css" />

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />


        @* <script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/jquery.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/kendo.all.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/kendo.aspnetmvc.min.js"></script>
    
    @*<script type="text/javascript" src="~/lib/counterup/counterup.min.js" ></script>*@
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/cultures/kendo.culture.sv-SE.min.js"></script>
    <script type="text/javascript" src="https://kendo.cdn.telerik.com/2021.1.119/js/messages/kendo.messages.sv-SE.min.js"></script>
    
    @*<script type="text/javascript" src="~/js/main.js" asp-append-version="true"></script>*@

    <!-- Font -->
    <script src="https://kit.fontawesome.com/ac1c9834c3.js" crossorigin="anonymous"></script>


    <script type="text/javascript">
        //set culture of the Kendo UI
        kendo.culture("sv-SE");
    </script>

</head>
<body>
    <header id="header">
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
        {
            <partial name="Menu/_user" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Lova"))
        {
            <partial name="Menu/_lova" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Styrelse"))
        {
            <partial name="Menu/_styrelse" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            @*<partial name="Menu/_menuAdmin" />*@
            <partial name="Menu/_admin" />
        }
        else if (SignInManager.IsSignedIn(User) && User.IsInRole("VA"))
        {
            <partial name="Menu/_va" />
        }
        else
        {
            <partial name="Menu/_menu" />
        }

    </header>
    <div class="container-fluid border-top">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div id="preloader"></div>
    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    <footer class="border-top footer-top text-muted" id="footer">
        <div class="container text-center">
            <i class="far fa-copyright"></i> 2020 - Löttingelund - <a href="mailto:info@lottingelund.se">info@lottingelund.se</a> - <a href="https://www.facebook.com/L%C3%B6ttingelund-346423732213175" target="_blank"><span style="font-size: 24px; color: Dodgerblue; vertical-align: middle" class="mb-1"><i class="fab fa-facebook-square"></i></span></a>
        </div>
    </footer>


    @{
        CultureInfo.DefaultThreadCurrentCulture = new CultureInfo("sv-SE");
    }


    @await RenderSectionAsync("Scripts", required: false)




    <script type="text/javascript" src="~/js/main.js" asp-append-version="true"></script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    <!--   <script stype="text/javascript" src="~/lib/bootstrap/js/bootstrap.js" asp-append-version="true"></script> -->


</body>


</html>
